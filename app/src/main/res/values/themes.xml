<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SubmissionAndroidFundaMental" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue_200</item>
        <item name="colorPrimaryVariant">@color/dark_blue_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/zeus</item>
        <item name="colorSecondaryVariant">@color/zeus</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l" tools:ignore="ObsoleteSdkInt">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextTitle">
        <item name="android:fontFamily">@font/nunito_sans_bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextButton">
        <item name="android:fontFamily">@font/nunito_sans_bold</item>
    </style>

    <style name="TextTitle.Profile">
        <item name="android:fontFamily">@font/nunito_sans_bold</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Stats">
        <item name="android:fontFamily">@font/nunito_sans_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:text">appaa</item>
    </style>

    <style name="TextCard">
        <item name="android:fontFamily">@font/nunito_sans_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="JustText">
        <item name="android:fontFamily">@font/nunito_sans</item>
    </style>
</resources>